<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <classPathEntry
            location="/Users/ganghuanliu/IdeaProjects/auto_batis/lib/mysql-connector-java-5.1.25-bin.jar"/>
    <context id="context1" targetRuntime="MyBatis3">
        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://xxxxx:3306/dbname"
                        userId="user" password="xxxxxx"/>
        <!-- PO类的package -->
        <javaModelGenerator targetPackage="com.xx.xx.xx.entity"
                            targetProject="src/main/java"/>
        <!-- XML文件的存放地址-->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources"/>
        <!--   Mapper接口地址     -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.xx.xx.xx.mapper"
                             targetProject="src/main/java">
        </javaClientGenerator>
        <!--   目标表名    -->
        <!--  byExample全都不要   -->
        <table tableName="some_config" domainObjectName="SomeConfig"
               enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
               enableSelectByExample="false" selectByExampleQueryId="false">
            <!--将数据库的蛇形命名改成驼峰式命名-->
            <property name="useActualColumnNames" value="false"/>
            <!--主键生成，不要用这个，没用-->
            <!--<generatedKey column="id" sqlStatement="MySql" identity="true" />-->
        </table>
    </context>
</generatorConfiguration>